{
  "name": "water-marker-app",
  "version": "1.0.5",
  "description": "FRI Logo Maker",
  "main": "main.js",
  "author": "Oleksander Bezverkhnii",
  "build": {
    "appId": "com.electron.watermarker",
    "productName": "fri-logo-maker-app",
    "asar": "false",
    "publish": {
      "provider": "github",
      "owner": "shurikoi",
      "repo": "watermark2.0",
      "releaseType": "release"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": "true",
      "oneClick": "false",
      "perMachine": "true"
    },
    "win": {
      "icon": "logo.ico"
    }
  },
  "scripts": {
    "start": "electron --trace-warnings .",
    "build": "electron-builder -p always"
  },
  "devDependencies": {
    "electron": "^19.0.0",
    "electron-builder": "^23.6.0",
    "electron-packager": "^17.1.1"
  },
  "dependencies": {
    "electron-updater": "^5.3.0",
    "sharp": "^0.31.3"
  }
}
